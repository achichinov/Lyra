CompileFlags:
  CompilationDatabase: .bin
Diagnostics:
  ClangTidy:
    Add:
      - modernize-*
      - bugprone-*
      - performance-*
    Remove:
      - modernize-use-trailing-return-type
      - modernize-use-nodiscard
  MissingIncludes: Strict
InlayHints:
  BlockEnd: Yes
  Designators: Yes
  Enabled: Yes
  ParameterNames: No
  DeducedTypes: No
  TypeNameLimit: 24
